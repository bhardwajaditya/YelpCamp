<h1 class="text-center">Add New Comment</h1>
<div class="container float-center" style="width:60%">
        <form action="/campgrounds/<%= id%>/comments" method="POST">
        <div class="form-group">
        <input type="text" class="form-control" placeholder="Author name" name="comment[author]">
        </div>
        <div class="form-group">
        <input type="text" class="form-control" placeholder="Comment Text" name="comment[text]">
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
 
    </form>
    </div>
    
<% include partials/footer %>