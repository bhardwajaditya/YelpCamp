<% include partials/header %>
<div class="container">
    <h1><%=camp.name %></h1>
    <p align="center"></p><img src ="<%= camp.image %>"></p>
    <p><%=camp.description %></p>
    <h3>Comments</h3>
    <ul>
        <% camp.comments.forEach(function(comment){ %>
        <li><p><strong><%= comment.author %></strong> - <%= comment.text %></p></li>
    <% }) %>
    </ul>
    <div style="width:60%">
        <form action=<%=url%> method="POST">
        <div class="form-group">
        <input type="text" class="form-control" placeholder="Author name" name="comment[author]">
        </div>
        <div class="form-group">
        <input type="text" class="form-control" placeholder="Comment Text" name="comment[text]">
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
 
    </form>
    </div>
    

</div>

        

        
    
<% include partials/footer %>