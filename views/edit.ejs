    <% include partials/header %>
    <div class="container">
        
        <h1 style="text-align:center">Edit <%=camp.name %></h1>
        <div style="width:30%; margin:auto">
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
        <div class="form-group">
        <input type="text" class="form-control"  name="campground[name]" value="<%= camp.name %>" >
        </div>
        <div class="form-group">
        <input type="text" class="form-control"  name="campground[image]" value="<%= camp.image %>" >
        </div>
        <div class="form-group">
        <input type="text" class="form-control"  name="campground[description]" value="<%= camp.description %>" >
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
    <a href="/campgrounds">Go back</a>
    </div>
    
    </div>
    <% include partials/footer %>